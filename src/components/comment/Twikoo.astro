---
import { commentConfig } from "@/config";

interface Props {
	path: string;
}

const config = {
	...commentConfig.twikoo,
	el: "#tcomment",
	path: Astro.props.path,
};
---

<div id="tcomment"></div>
<script define:vars={{ config }}>
  function updateTwikooViews() {
    // 使用官方API获取评论数
    twikoo.getCommentsCount({
      envId: config.envId, // 从配置中获取环境ID
      region: config.region, // 从配置中获取地域（如果有）
      urls: [config.path], // 当前页面路径
      includeReply: false // 不包括回复
    }).then(res => {
      if (res && res.length > 0) {
        const commentCount = res[0].count;
        document.getElementById('twikoo_comments').textContent = commentCount;
      }
    }).catch(err => {
      console.error('Failed to get comments count:', err);
      document.getElementById('twikoo_comments').textContent = '0';
    });
  }
  
  // 加载 Twikoo 脚本
  function loadTwikoo() {
    const script = document.createElement("script");
    script.src = "https://s4.zstatic.net/npm/twikoo@1.6.44/dist/twikoo.min.js";
    script.defer = true;
    script.onload = () => {
      twikoo.init({
        ...config,
        onCommentLoaded: () => {
          updateTwikooViews();
        }
      });
    };
    document.body.appendChild(script);
  }
  document.addEventListener("loadComment", loadTwikoo, { once: true });
</script>